<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?language javascript?>

<BorderPane prefHeight="480.0" prefWidth="640.0" 
	fx:controller="com.Yusuke.java.WindowController"
	xmlns="http://javafx.com/javafx/8" 
	xmlns:fx="http://javafx.com/fxml/1">
	
	<top>
		<Label fx:id="label" text="=>Input articles." />
	</top>
	<left>
		<TextArea fx:id="inputText" prefWidth="320.0" />
	</left>
	<right>
		<TextArea fx:id="outputText" prefWidth="320.0" wrapText="true" text="Result..." />
	</right>
	<bottom>
		<Button fx:id="button" onAction="#buttonAction" text="Convert" BorderPane.alignment="CENTER" />
	</bottom>
</BorderPane>
