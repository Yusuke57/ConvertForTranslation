<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?language javascript?>

<BorderPane prefHeight="480.0" prefWidth="640.0" 
	fx:controller="com.Yusuke.java.WindowController"
	xmlns="http://javafx.com/javafx/8" 
	xmlns:fx="http://javafx.com/fxml/1">
	
	<top>
		<Label fx:id="label" text="=>Input articles.">
			<BorderPane.margin>
				<Insets top="12" right="6" bottom="12" left="6"/>
			</BorderPane.margin>
		</Label>
	</top>
	<left>
		<TextArea fx:id="inputText" prefWidth="308.0">
			<BorderPane.margin>
				<Insets top="2" right="6" bottom="2" left="6"/>
			</BorderPane.margin>
		</TextArea>
	</left>
	<right>
		<TextArea fx:id="outputText" prefWidth="308.0" wrapText="true" text="Result...">
			<BorderPane.margin>
				<Insets top="2" right="6" bottom="2" left="6"/>
			</BorderPane.margin>
		</TextArea>
	</right>
	<bottom>
		<Button fx:id="button" onAction="#buttonAction"
			prefWidth="180.0" prefHeight="40.0" 
			text="Convert" BorderPane.alignment="CENTER">
			<BorderPane.margin>
				<Insets top="12" right="6" bottom="18" left="6"/>
			</BorderPane.margin>
		</Button>
	</bottom>
</BorderPane>
